<div class="row">
  <div class="span8 post offset2">
    <h1><%= @post.title %></h1>
    <%= @post.content %>
    <p>Written by <a href="http://www.twitter.com/<%= @post.account.screen_name %>"><%= @post.account.screen_name %></a> on <%= @post.created_at.strftime("%b %-d %Y, at %l:%M:%S %P (%Z)") %> (last updated <%= @post.updated_at.strftime("%b %-d %Y, at %l:%M:%S %P (%Z)") %>)</p>
  </div>
</div>
